<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
   <children>
      <Label fx:id="mainLoginLabel" layoutX="271.0" layoutY="28.0" text="Login">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="userNameLabel" layoutX="150.0" layoutY="125.0" text="User Name" />
      <Label fx:id="passwordLabel" layoutX="150.0" layoutY="200.0" text="Password" />
      <TextField fx:id="userNameField" layoutX="230.0" layoutY="125.0" />
      <PasswordField fx:id="passwordField" layoutX="230.0" layoutY="200.0" />
      <Button fx:id="loginButton" layoutX="230.0" layoutY="256.0" mnemonicParsing="false" onAction="#loginBtnAction" text="Login" />
      <Label fx:id="userLocationLabel" layoutX="269.0" layoutY="315.0" text="User Location" />
      <Button fx:id="exitButton" layoutX="327.0" layoutY="256.0" mnemonicParsing="false" onAction="#exitBtnAction" text="Exit" />
   </children>
</AnchorPane>
